{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/python3 /absolute/path/to/.claude/memory/hooks/on_prompt.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/python3 /absolute/path/to/.claude/memory/hooks/on_stop.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/usr/bin/python3 /absolute/path/to/.claude/memory/statusline.py"
  }
}
